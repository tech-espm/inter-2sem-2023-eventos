            position: absolute;
            top: 50%;
            left: 5px;
            transform: translateY(-50%);
            color: #fff;
            font-size: 1em;
            pointer-events: none;
            transition: 0.5s;
        }

        /* animations: start */
        input:focus~label,
        input:valid~label {
            top: -5px;
        }

