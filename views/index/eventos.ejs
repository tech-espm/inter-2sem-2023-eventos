<div class="container-fluid pb-5">
  <h1 class="my-5 text-center" style="color: white;">Eventos Cadastrados</h1>
  <div class="row">

    <% for (let i = 0; i < eventos.length; i++) { %>
      <div class="col-md-6 col-lg-3 my-3">
        <div class="card" style="min-height: 100%;">
          <img class="card-img-top" src="/public/img/eventos/<%= eventos[i].id %>.jpg" alt="Evento">
          <div class="card-body">
            <h2 class="text-center">
              <%= eventos[i].nome %>
            </h2>
            <p class="text-right">
              <small>
                <i>
                  <%= eventos[i].estilo %>
                </i>
              </small>
            </p>
            <h3>
              <%= eventos[i].local %>
            </h3>
            <p>
              <b>
                Contato:
              </b>
              <%= eventos[i].email %>
            </p>
            <p>
              <b>
                Quando:
              </b>
              <%= eventos[i].data %>
              (<%= eventos[i].horario %>)
            </p>
          </div>
        </div>
      </div>
    <% } %>

  </div>
</div>
